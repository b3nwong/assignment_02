# Create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
    #separate into 2 main groups for the layout
        orientation: 'vertical'
        size_hint_x: 0.25

        Label:
        #this button will sort the way the locations are displayed
            text: "Sort by: "

        Spinner:
            id: sorter_spinner
            text: "Choose sorting"
            values: ("Visited", "Alphabetical", "Priority")
            on_text: if sorter_spinner.text == "Priority": app.sort_priority()
            on_text: if sorter_spinner.text == "Alphabetical": app.sort_alphabetical()
            on_text: if sorter_spinner.text == "Visited": app.sort_visited()

        Label:
            text: "Add new place..."

        Label:
            text: "Name:"
        TextInput:
            id: input_name

        Label:
            text: "Country"
        TextInput:
            id: input_country

        Label:
            text: "Priority"
        TextInput:
            id: input_priority

        Button:
            text:"Add place"
            on_press: app.add_place()
            #save these details into a list on_press:
        Button:
            text: "Clear"
            on_press: app.clear_input()
    BoxLayout:
        orientation: 'vertical'

        Label:
            size_hint_y: 0.1
            text: "Places to visit: "
            id: sort_method_label_output
            #display

        BoxLayout:
            size_hint_y: 1
            id: entries_box
            orientation: "vertical"
            #List objects should be added here making buttons
        Label:
            size_hint_y: 0.1
            text: app.status_text
