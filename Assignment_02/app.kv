# Create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
    #separate into 2 main groups for the layout
        orientation: 'vertical'
        size_hint_x: 0.25

        Label:
        #this button will sort the way the locations are displayed
            text: "Sort by: "

        Button:
            text: "Visited"

        Label:
            text: "Add new place..."

        Label:
            text: "Name:"
        TextInput:
            id: input_name

        Label:
            text: "Country"
        TextInput:
            id: input_country

        Label:
            text: "Priority"
        TextInput:
            id: input_priority

        Button:
            text:"Add place"
            #save these details into a list on_press:
        Button:
            text: "Clear"
            on_press: app.clear_input()
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "Places to visit: "
            id: sort_method_label_output